module full_adder_4bit_st(sum,cout,a,b,cin);
input [3:0]a,b;
input cin;
output [3:0]sum; 
output carry;
wire w1, w2, w3;

full_adder_bh FA1 (s[0],w1,a[0],b[0],cin);
full_adder_bh FA2 (s[1],w2,a[1],b[1],w1);
full_adder_bh FA3 (s[2],w3,a[2],b[2],w2);
full_adder_bh FA4 (s[3],carry,a[3],b[3],w3);
endmodule 
